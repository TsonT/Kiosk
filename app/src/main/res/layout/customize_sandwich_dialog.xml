<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_rounded_white">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_rounded_purple"
        android:gravity="center"
        android:padding="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:text="Customize your sandwich here!"
        android:textColor="@android:color/background_light"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_white"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@color/Transparent"
            android:gravity="center"
            android:text="@string/NumberSandwiches"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0" />

        <NumberPicker
            android:id="@+id/numDrinks"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"

            android:theme="@style/AppTheme.Picker"></NumberPicker>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="1200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/Transparent"
                android:gravity="center"
                android:text="@string/vegetables"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="900dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_rounded_lightpurple"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkCarrots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:buttonTint="@color/DarkGray"
                    android:fontFamily="@font/amaranth"
                    android:text="Carrots"
                    android:textColorHighlight="@android:color/holo_orange_light"
                    android:textColorLink="@android:color/holo_orange_light"
                    android:textCursorDrawable="@android:color/holo_orange_light"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <CheckBox
                    android:id="@+id/chkCilantro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:buttonTint="@color/DarkGray"
                    android:fontFamily="@font/amaranth"
                    android:text="Cilantro"
                    android:textColorHighlight="@android:color/holo_orange_light"
                    android:textColorLink="@android:color/holo_orange_light"
                    android:textCursorDrawable="@android:color/holo_orange_light"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <CheckBox
                    android:id="@+id/chkCucumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:buttonTint="@color/DarkGray"
                    android:fontFamily="@font/amaranth"
                    android:text="Cucumbers"
                    android:textColorHighlight="@android:color/holo_orange_light"
                    android:textColorLink="@android:color/holo_orange_light"
                    android:textCursorDrawable="@android:color/holo_orange_light"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <CheckBox
                    android:id="@+id/chkJalapenos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:buttonTint="@color/DarkGray"
                    android:fontFamily="@font/amaranth"
                    android:text="Jalapenos"
                    android:textColorHighlight="@android:color/holo_orange_light"
                    android:textColorLink="@android:color/holo_orange_light"
                    android:textCursorDrawable="@android:color/holo_orange_light"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/Transparent"
                android:gravity="center"
                android:text="@string/spreads"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_rounded_lightpurple"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkPate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:buttonTint="@color/DarkGray"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:text="Pate"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <CheckBox
                    android:id="@+id/chkMayo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:buttonTint="@color/DarkGray"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:text="Mayo"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@drawable/btn_rounded_dark"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@drawable/btn_rounded_dark"
                android:gravity="center"
                android:text="Delete"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@drawable/btn_rounded_dark"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>