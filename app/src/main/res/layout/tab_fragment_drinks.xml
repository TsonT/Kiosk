<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black_overlay">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="420dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="210dp"
        android:background="@drawable/round_outline"
        android:backgroundTint="@color/LighterGray"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView3"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginStart="8dp"
            android:scrollbars="none"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_outline">

            <LinearLayout
                android:id="@+id/mainLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgCoffee"
                        android:layout_width="290dp"
                        android:layout_height="176dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_outline"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/drink" />

                    <TextView
                        android:id="@+id/txtCoffee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Coffee: $"
                        android:textColor="@android:color/background_light"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnCoffee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/DarkGray"
                        app:fabSize="mini"
                        app:srcCompat="@android:drawable/ic_menu_info_details" />

                </LinearLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSmoothie"
                        android:layout_width="290dp"
                        android:layout_height="176dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_outline"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/drink" />

                    <TextView
                        android:id="@+id/txtSmoothie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Smoothie: $"
                        android:textColor="@android:color/background_light"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnSmoothie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/DarkGray"
                        app:fabSize="mini"
                        app:srcCompat="@android:drawable/ic_menu_info_details" />
                </LinearLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgPassionFruit"
                        android:layout_width="290dp"
                        android:layout_height="176dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_outline"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/drink" />

                    <TextView
                        android:id="@+id/txtPassionFruit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Passion Fruit: $"
                        android:textColor="@android:color/background_light"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnPassionFruit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/DarkGray"
                        app:fabSize="mini"
                        app:srcCompat="@android:drawable/ic_menu_info_details" />
                </LinearLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSaltyLemonade"
                        android:layout_width="290dp"
                        android:layout_height="176dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_outline"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/drink" />

                    <TextView
                        android:id="@+id/txtSaltyLemonade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Salty Lemonade: $"
                        android:textColor="@android:color/background_light"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnSaltyLemonade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/DarkGray"
                        app:fabSize="mini"
                        app:srcCompat="@android:drawable/ic_menu_info_details" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap the information buttons for details about the drink!"
            android:textColor="@android:color/background_light"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>