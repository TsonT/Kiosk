<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#383633</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AmaranthTextViewStyle.</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:textViewStyle">@style/AmaranthTextViewStyle.</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:textViewStyle">@style/AmaranthTextViewStyle.</item>
    </style>

    <string name="cannot_deauthorize_dialog_message">There are Square payments on this device that need to be uploaded. Please ensure you are connected to the Internet.</string>
    <string name="cannot_deauthorize_dialog_title">Unable to deauthorize</string>
    <string name="checkout_canceled_toast">Checkout canceled</string>
    <string name="checkout_success_dialog_message">See Logcat for the transaction details. You can refund transactions on the Square Dashboard.</string>
    <string name="checkout_success_dialog_title">%1s Successfully Charged</string>
    <string name="checkout_title">Take a payment.</string>
    <string name="deauthorize">Deauthorize</string>
    <string name="enter_authorization_code">Enter an authorization code.</string>
    <string name="error_dialog_title">Error</string>
    <string name="generate_auth_code">Generate an authorization code in the Reader SDK tab in the Developer Portal.</string>
    <string name="location_view_format">Location: %s</string>
    <string name="manual_code_entry">Enter Code Manually</string>
    <string name="network_error_dialog_title">Network error</string>
    <string name="not_authorized">Authorize Reader SDK.</string>
    <string name="not_supported_emulator">Not supported on emulator.</string>
    <string name="ok_button">OK</string>
    <string name="permission_request">Camera permission is required to display the camera preview.</string>
    <string name="reader_settings">Reader Settings</string>
    <string name="retry_button">Retry</string>
    <string name="scan_qr_code">Scan QR Code</string>
    <string name="scan_qr_code_title">Scan the QR Code.</string>
    <string name="settings_button">Settings</string>
    <string name="start_checkout">Charge %1s</string>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/loading_background</item>
        <item name="android:textViewStyle">@style/AmaranthTextViewStyle.</item>
        <item name="buttonStyle">@style/AmaranthTextViewStyle.</item>
    </style>

    <style name="AmaranthTextViewStyle." parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/amaranth</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/DarkGray</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="colorControlNormal">@color/Transparent</item>
    </style>
    <style name="NumberPickerText">
        <item name="android:fontFamily">@font/amaranth</item>
    </style>
</resources>
